<h2 class='title'>
  {{name}}
</h2>
<div class='wrapper'>
  <div class='info'>
    <p class='capital'>Capital: {{capital}}</p>
    <p class='population'>Population: {{population}}</p>
    <p class='languages'>Languages:</p>
    <ul>
      {{#each languages}}
      <li class='language_item'>{{this.name}}</li>
      {{/each}}
    </ul>
  </div>
  <div>

    <img src="{{flag}}" alt="">
  </div>
</div>